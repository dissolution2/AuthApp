<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerPadding="15dp"
    tools:context="com.fwa.app.testingViews.testingViews.fragment.storage.menu.button_menu_fragment_storage_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerPadding="5dp">

        <Button
            android:id="@+id/btnShoppingOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="Cold +4"
            android:textColor="#FAF7F7" />

         <Button
            android:id="@+id/btnShoppingTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cold -18"
            android:layout_margin="2dp"
            android:textColor="#F8F4F4" />

        <Button
            android:id="@+id/btnShoppingThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dry"
            android:layout_margin="2dp"
            android:textColor="#F4F1F1" />
    </LinearLayout>
</LinearLayout>