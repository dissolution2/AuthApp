<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.fwa.app.testingViews.testingViews.fragment.setup.fragment_blank_check_user">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="21sp"
        android:textStyle="bold"
        android:text="Option Menu"
        />

    <Button
        android:id="@+id/sett_up_family_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#0ED6B9"
        android:gravity="center_horizontal"
        android:text="Start a family"
        android:textColor="#FDFDFD"
        android:textSize="21sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/search_for_family_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sett_up_family_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:height="45dp"
        android:backgroundTint="#0ED6B9"
        android:gravity="center_horizontal"
        android:text="Join a family"
        android:textColor="#FDFDFD"
        android:textSize="21sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_for_family_btn"
        android:layout_margin="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/family_info_txt"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:background="@drawable/back_ground_search_detective"
            android:hint="Family Info"
            android:textColor="#090909"
            android:textSize="24sp" />

        <Button
            android:id="@+id/logg_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/family_info_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:height="45dp"
            android:backgroundTint="#0ED6B9"
            android:gravity="center_horizontal"
            android:text="Logg Out"
            android:textColor="#FDFDFD"
            android:textSize="21sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

</RelativeLayout>